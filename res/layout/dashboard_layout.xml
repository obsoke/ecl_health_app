<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

<TextView
        android:id="@+id/tv_dashboard_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_msg" android:layout_gravity="center" android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_bp"
            android:id="@+id/tv_header_bp" android:autoText="true" android:textSize="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btn_record_bp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_below="@+id/tv_dashboard_welcome"
                android:layout_centerHorizontal="true"
                android:text="@string/dash_record" android:onClick="onClickRecordBP"/>
        <Button
                android:id="@+id/btn_stats_bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_record_exer"
                android:layout_centerHorizontal="true"
                android:text="@string/dash_analytics" android:onClick="onClickAnalyzeBP"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_graph"
                android:id="@+id/btn_graph_bp" android:singleLine="true" android:onClick="onClickGraphBP"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_weight"
            android:id="@+id/tv_header_weight" android:layout_gravity="left|center_vertical" android:textSize="20dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="left">
        <Button
            android:id="@+id/btn_record_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_record_bp"
            android:layout_below="@+id/btn_record_bp"
            android:layout_centerHorizontal="true"
            android:text="@string/dash_record" android:onClick="onClickRecordWeight"/>
        <Button
                android:id="@+id/btn_stats_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/btn_record_weight"
                android:layout_below="@+id/btn_stats_bp"
                android:layout_centerHorizontal="true"
                android:text="@string/dash_analytics" android:onClick="onClickAnalyzeWeight"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash_graph"
                android:id="@+id/btn_graph_weight" android:onClick="onClickGraphWeight"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/header_exercise"
            android:id="@+id/tv_header_exercise" android:layout_gravity="left|center_vertical" android:textSize="20dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_vertical">
        <Button
            android:id="@+id/btn_record_exer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_record_weight"
            android:layout_below="@+id/btn_record_weight"
            android:layout_centerHorizontal="true"
            android:text="@string/dash_record" android:onClick="onClickRecordExercise"/>
        <Button
            android:id="@+id/btn_stats_exer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/btn_stats_weight"
            android:layout_below="@+id/btn_stats_weight"
            android:layout_centerHorizontal="true"
            android:text="@string/dash_analytics" />
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_are"
            android:id="@+id/tv_youAre" android:layout_gravity="center" android:textColor="#17ff3e"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Bio" android:layout_gravity="center" android:textColor="#17ff3e"
            android:textStyle="italic"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_emerg"
            android:id="@+id/tv_Emerg" android:layout_gravity="center" android:textColor="#ff0710"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_EmergBio" android:layout_gravity="center" android:textColor="#ff0710"
            android:textStyle="italic" android:phoneNumber="false"/>

</LinearLayout>